<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.example.olesya.forecast.pojo.WeatherInfo" />

        <variable
            name="context"
            type="android.content.Context" />
    </data>

    <android.support.v7.widget.CardView
        contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:paddingTop="@dimen/std"
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX:XX"
                android:paddingLeft="@dimen/std"
                android:text="@{info.date}"
                android:textSize="@dimen/title_size" />

            <RelativeLayout
                android:id="@+id/main_container"
                android:layout_margin="@dimen/padding_sm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@+id/temperature"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

                <TextView
                    android:id="@id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="t*"
                    android:maxLines="2"
                    android:text="@{info.stringMaxMinTemperature}" />
            </RelativeLayout>

            <RelativeLayout
                android:paddingRight="@dimen/padding_sm"
                android:id="@+id/humidity_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/main_container">

                <ImageView
                    android:id="@+id/ic_humidity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_mist"
                    android:scaleX="0.4"
                    android:scaleY="0.5"
                    android:backgroundTint="@android:color/black" />

                <TextView
                    android:id="@+id/humidity_val"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/ic_humidity"
                    android:gravity="center_vertical"
                    android:hint="18*"
                    android:text="@{info.stringHumidity}"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_humidity"
                    android:layout_centerHorizontal="true"
                    android:hint="wind"
                    android:text="@string/humidity"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wind_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/humidity_container"
                android:layout_below="@id/main_container">

                <ImageView
                    android:id="@+id/ic_wind"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_wind"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:backgroundTint="@android:color/black" />

                <TextView
                    android:id="@+id/wind_val"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/ic_wind"
                    android:hint="18*"
                    android:text="@{info.stringWindSpeed}"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_wind"
                    android:layout_centerHorizontal="true"
                    android:hint="wind"
                    android:text="@string/wind"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>

            <TextView
                android:id="@+id/summary"
                android:paddingLeft="@dimen/std"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_container"
                android:layout_toLeftOf="@id/wind_container"
                android:hint="summary"
                android:text="@{info.summary}"
                android:textSize="@dimen/small_text_size" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>