<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.example.olesya.forecast.pojo.WeatherInfo" />

        <variable
            name="context"
            type="android.content.Context" />
    </data>

    <android.support.v7.widget.CardView
        contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:paddingTop="@dimen/std"
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX:XX"
                android:paddingLeft="@dimen/std"
                android:text="@{info.date}"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_toLeftOf="@id/icons"
                android:hint="summary"
                android:paddingBottom="@dimen/padding_sm"
                android:paddingLeft="@dimen/std"
                android:paddingRight="@dimen/std"
                android:paddingTop="@dimen/padding_sm"
                android:text="@{info.summary}"
                android:textSize="@dimen/small_text_size" />

            <RelativeLayout
                android:id="@+id/icons"
                android:layout_margin="@dimen/padding_sm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/temperature"
                    android:background="@drawable/ic_sun"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="t*"
                    android:maxLines="2"
                    android:text="@{info.stringTemperature}"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>

