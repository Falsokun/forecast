<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.example.olesya.forecast.pojo.WeatherInfo" />

        <variable
            name="context"
            type="android.content.Context" />
    </data>

    <android.support.v7.widget.CardView
        contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX:XX"
                android:paddingLeft="@dimen/std"
                android:paddingTop="8dp"
                android:text="@{info.hour}"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/dow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:hint="dow"
                android:paddingLeft="@dimen/std"
                android:text="@{info.date}" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dow"
                android:hint="summary"
                android:paddingBottom="@dimen/padding_sm"
                android:paddingLeft="@dimen/std"
                android:paddingRight="@dimen/std"
                android:paddingTop="@dimen/padding_sm"
                android:text="@{info.summary}"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/temperature"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:tint="@android:color/black" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:hint="t*"
                android:padding="@dimen/std"
                android:text="@{info.stringTemperature}" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>